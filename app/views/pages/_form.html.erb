<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @page %>
      <%= form_for @page, :html => {:class => 'shadow p-3 mb-3 bg-info rounded'}  do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div><br>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: "10", class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>      
        </div>
        <div class="d-flex justify-content-center ">
          <%= f.submit class: "btn btn-success "%>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to "[ Cancel and return to articles listing ]", pages_path, class: "text-info d-flex justify-content-center"%>
    </div>
  </div>
</div>

<style>
.btn {
  margin-top: 6px;
}
</style>