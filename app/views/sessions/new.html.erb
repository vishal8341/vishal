<div id="page-content">
    <h1 class="text-center mt-4">Log in </h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">
            <%= form_tag(login_path, method: "post", class: 'shadow p-3 mb-3 bg-info rounded' ) do %>

                <div class="form-group row">
                    <%= label_tag(:q, "Email", class: 'col-2 col-form-label text-light') %>
                    <div class="col-10">
                        <%= text_field_tag :email, "", class: 'form-control shadow rounded', placeholder: "Enter email"  %>
                    </div>      
                </div><br>
                <div class="form-group row">
                    <%= label_tag(:q, "Password", class: 'col-2 col-form-label text-light') %>
                    <div class="col-10">
                        <%= text_field_tag :password, "", class: 'form-control shadow rounded', placeholder: "Enter password"  %>
                    </div>      
                </div><br>
                <div class="d-flex justify-content-center ">
                    <%= submit_tag("Login", class: "btn btn-success")%>
                </div>
            <% end %>
            </div>
            <div class="mb-3">
            <%= link_to "[ Cancel and return to articles listing ]", pages_path, class: "text-info d-flex justify-content-center"%>
            </div>
        </div>
    </div>
</div>

<style>
    .btn {
    margin-top: 6px;
    }
</style>